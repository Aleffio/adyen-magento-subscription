    <adyen_subscription_customer_profiles translate="label">
        <label>Customer My Account Subscriptions</label>
        <update handle="customer_account" />
        <reference name="my.account.wrapper">
            <block type="adyen_subscription/customer_profiles_list" name="adyen_subscription_customer_profiles_list"
                   template="adyen_subscription/customer/profiles/list.phtml" />
        </reference>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="adyen_subscription">
                <title>My Subscriptions</title>
            </action>
        </reference>
    </adyen_subscription_customer_profiles>

    <adyen_subscription_customer_view translate="label">
        <label>Customer My Account View Subscription</label>
        <update handle="customer_account" />
        <reference name="my.account.wrapper">
            <block type="adyen_subscription/customer_profiles_view" name="adyen_subscription_customer_profiles_view"
