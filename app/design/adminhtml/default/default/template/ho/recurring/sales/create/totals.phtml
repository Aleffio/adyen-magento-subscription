<?php
/** @var Ho_Recurring_Model_Profile $_profile */
$_profile = Mage::registry('current_profile');
$fullUpdate = $this->getRequest()->getParam('full_update');
?>
<table cellspacing="0" cellpadding="8" width="100%">
    <tbody>
        <?php echo $this->renderTotals(); ?>
        <?php echo $this->renderTotals('footer'); ?>
    </tbody>
</table>
<div class="divider"></div>
<?php if ($_profile && $fullUpdate): ?>
    <div class="fieldset">
        <div class="hor-scroll">
            <table cellspacing="0" class="form-list">
                <tbody>
                <tr>
                    <td class="label"><label for="scheduled_at"><?=$this->__('Scheduled At');?></label></td>
                    <td class="value">
                        <input id="scheduled_at" name="ho_recurring[scheduled_at]" value="<?=$_profile->getScheduledAt();?>" class="input-text" type="text">
                        <img title="<?=$this->__('Select date');?>" id="_scheduled_at"
                             src="<?=Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_SKIN) . 'adminhtml/default/default/images/grid-cal.gif';?>"
                             class="v-middle">
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script type="text/javascript">
        Calendar.setup({
            inputField: 'scheduled_at',
            ifFormat: '%Y-%m-%d',
            button: '_scheduled_at',
            align: 'Bl',
            singleClick: true
        });
    </script>
<?php endif; ?>

<div class="order-totals-bottom">
<?php if ($_profile): ?>
    <?php
    $updateUrl = $fullUpdate
        ? $this->getUrl('ho_recurring/adminhtml_profile/updateProfile', ['id' => $_profile->getId()])
        : $this->getUrl('ho_recurring/adminhtml_profile/view', ['id' => $_profile->getId()]);
    ?>

    <script type="text/javascript">
        AdminOrder.prototype.submitProfile = function(){
            if (this.orderItemChanged) {
                if (confirm('You have item changes')) {
                    if (editForm.submit('<?=$updateUrl;?>')) {
                        disableElements('save');
                    }
                } else {
                    this.itemsUpdate();
                }
            } else {
                if (editForm.submit('<?=$updateUrl;?>')) {
                    disableElements('save');
                }
            }
        };
    </script>

    <?php echo $this->getButtonHtml(Mage::helper('ho_recurring')->__('Finish Editing'), 'order.submitProfile()', 'save'); ?>
</div>
<?php else: ?>
<div class="order-totals-bottom">
    <p>
        <label for="notify_customer" class="normal"><?php echo Mage::helper('sales')->__('Append Comments') ?></label>
        <input type="checkbox" id="notify_customer" name="order[comment][customer_note_notify]" value="1" <?php if($this->getNoteNotify()): ?>checked="true"<?php endif; ?>/>
    </p>
    <?php if ($this->canSendNewOrderConfirmationEmail()): ?>
    <p>
        <label for="send_confirmation" class="normal"><?php echo Mage::helper('sales')->__('Email Order Confirmation') ?></label>
        <input type="checkbox" id="send_confirmation" name="order[send_confirmation]" value="1" checked="checked"/>
    </p>
    <?php endif; ?>
    <p><?php echo $this->getButtonHtml(Mage::helper('sales')->__('Submit Order'),'order.submit()','save'); ?></p>
</div>
<?php endif; ?>

<script type="text/javascript">
//<![CDATA[
var sendEmailCheckbox = $('send_confirmation');
if (sendEmailCheckbox) {
    Event.observe(sendEmailCheckbox, 'change', notifyCustomerUpdate);
    notifyCustomerUpdate();
}

function notifyCustomerUpdate() {
    var sendEmailCheckbox = $('send_confirmation');
    var notifyCustomerCheckbox = $('notify_customer');
    if (!sendEmailCheckbox || !notifyCustomerCheckbox)
        return;
    notifyCustomerCheckbox.disabled = !sendEmailCheckbox.checked;
}
//]]>
</script>
