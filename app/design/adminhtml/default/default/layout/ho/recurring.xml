<layout>
    <ho_recurring_adminhtml_profile_index>
        <reference name="content">
            <block type="ho_recurring/adminhtml_profile" name="adminhtml_ho_profile.grid.container" />
        </reference>
    </ho_recurring_adminhtml_profile_index>

    <ho_recurring_adminhtml_profile_edit>
        <reference name="content">
            <block type="ho_recurring/adminhtml_profile_edit" />
        </reference>
        <reference name="left">
            <block type="ho_recurring/adminhtml_profile_edit_tabs" name="profile_edit_tabs">
                <block name="product_test_block" type="ho_recurring/adminhtml_profile_edit_tabs_products" template="ho/recurring/products.phtml">
                    <block type="ho_recurring/adminhtml_profile_edit_tabs_products_totals" name="order_totals" template="sales/order/totals.phtml" />
                </block>
                <action method="addTab"><name>profile_edit_tabs_general</name><block>ho_recurring/adminhtml_profile_edit_tabs_general</block></action>
                <action method="addTab"><name>profile_edit_tabs_products</name><block>product_test_block</block></action>
            </block>
        </reference>
    </ho_recurring_adminhtml_profile_edit>
</layout>
