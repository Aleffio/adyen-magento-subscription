<layout>
    <default>
        <reference name="head">
            <action method="addCss"><stylesheet>ho/recurring/css/recurring.css</stylesheet></action>
        </reference>
    </default>

    <adminhtml_catalog_product_edit>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>ho/recurring/js/jquery-1.11.3.min.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>ho/recurring/js/jquery-ui.min.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>ho/recurring/js/recurring.js</name><params/></action>
        </reference>
    </adminhtml_catalog_product_edit>

    <ho_recurring_adminhtml_profile_index>
        <reference name="content">
            <block type="ho_recurring/adminhtml_profile" name="adminhtml_ho_profile.grid.container" />
        </reference>
    </ho_recurring_adminhtml_profile_index>

    <ho_recurring_adminhtml_profile_edit>
        <reference name="content">
            <block type="ho_recurring/adminhtml_profile_edit" />
        </reference>
        <reference name="left">
            <block type="ho_recurring/adminhtml_profile_edit_tabs" name="profile_edit_tabs">
                <block name="profile_general_block" type="ho_recurring/adminhtml_profile_edit_tabs_general" template="ho/recurring/general.phtml">
                    <block type="adminhtml/sales_order_payment" name="order_payment"/>
                </block>
                <block name="profile_upcoming_order_block" type="ho_recurring/adminhtml_profile_edit_tabs_upcomingOrder" template="ho/recurring/order.phtml">
                    <block type="ho_recurring/adminhtml_profile_edit_tabs_upcomingOrder_totals" name="order_totals" template="sales/order/totals.phtml" />
                </block>
                <action method="addTab"><name>profile_general</name><block>profile_general_block</block></action>
                <action method="addTab"><name>profile_products</name><block>ho_recurring/adminhtml_profile_edit_tabs_products</block></action>
                <action method="addTab"><name>profile_past_orders</name><block>ho_recurring/adminhtml_profile_edit_tabs_pastOrders</block></action>
                <action method="addTab"><name>profile_upcoming_order</name><block>profile_upcoming_order_block</block></action>
            </block>
        </reference>
    </ho_recurring_adminhtml_profile_edit>

    <adminhtml_catalog_product_edit>
        <reference name="product_tabs">
            <action method="addTab">
                <name>ho_recurring_profile_tab</name>
                <block>ho_recurring/adminhtml_catalog_product_tab_recurring</block>
            </action>
        </reference>
    </adminhtml_catalog_product_edit>
</layout>
