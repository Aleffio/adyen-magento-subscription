<config>
    <modules>
        <Ho_Recurring>
            <version>0.13.0</version>
        </Ho_Recurring>
    </modules>
    <global>
        <blocks>
            <ho_recurring>
                <class>Ho_Recurring_Block</class>
            </ho_recurring>
        </blocks>
        <helpers>
            <ho_recurring>
                <class>Ho_Recurring_Helper</class>
            </ho_recurring>
        </helpers>
        <models>
            <ho_recurring>
                <class>Ho_Recurring_Model</class>
                <resourceModel>ho_recurring_resource</resourceModel>
            </ho_recurring>
            <ho_recurring_resource>
                <class>Ho_Recurring_Model_Resource</class>
                <entities>
                    <profile>
                        <table>ho_recurring_profile</table>
                    </profile>
                    <profile_address>
                        <table>ho_recurring_profile_address</table>
                    </profile_address>
                    <profile_item>
                        <table>ho_recurring_profile_item</table>
                    </profile_item>
                    <profile_quote>
                        <table>ho_recurring_profile_quote</table>
                    </profile_quote>
                    <profile_order>
                        <table>ho_recurring_profile_order</table>
                    </profile_order>
                    <product_profile>
                        <table>ho_recurring_product_profile</table>
                    </product_profile>
                </entities>
            </ho_recurring_resource>
        </models>
        <resources>
            <ho_recurring_setup>
                <setup>
                    <module>Ho_Recurring</module>
                </setup>
            </ho_recurring_setup>
        </resources>
        <events>
            <catalog_product_load_after>
                <observers>
                    <ho_recurring_add_recurring_profiles_options>
                        <class>ho_recurring/observer</class>
                        <method>addRecurringProductProfilesOption</method>
                    </ho_recurring_add_recurring_profiles_options>
                    <ho_recurring_add_recurring_profiles_options_to_quote>
                        <class>ho_recurring/observer</class>
                        <method>addRecurringProductProfileToQuote</method>
                    </ho_recurring_add_recurring_profiles_options_to_quote>
                </observers>
            </catalog_product_load_after>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <ho_recurring_add_recurring_profiles_options_to_order>
                        <class>ho_recurring/observer</class>
                        <method>addRecurringProductProfileToOrder</method>
                    </ho_recurring_add_recurring_profiles_options_to_order>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <sales_order_invoice_register>
                <observers>
                    <ho_recurring_convert_order_to_profile>
                        <class>ho_recurring/observer</class>
                        <method>convertOrderToProfile</method>
                    </ho_recurring_convert_order_to_profile>
                </observers>
            </sales_order_invoice_register>
        </events>
    </global>

    <admin>
        <routers>
            <ho_recurring>
                <use>admin</use>
                <args>
                    <module>Ho_Recurring</module>
                    <frontName>ho_recurring</frontName>
                </args>
            </ho_recurring>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <ho_recurring module="ho_recurring">
                    <file>ho/recurring.xml</file>
                </ho_recurring>
            </updates>
        </layout>
        <events>
            <catalog_product_save_after>
                <observers>
                    <ho_recurring_save_recurring_product_data>
                        <type>singleton</type>
                        <class>ho_recurring/catalog_product_observer</class>
                        <method>saveRecurringProductData</method>
                    </ho_recurring_save_recurring_product_data>
                </observers>
            </catalog_product_save_after>
        </events>
    </adminhtml>

    <crontab>
        <jobs>
            <ho_recurring_create_quotes>
                <schedule>
                    <cron_expr>15 1 * * *</cron_expr>
                </schedule>
                <run>
                    <model>ho_recurring/observer::createQuotes</model>
                </run>
            </ho_recurring_create_quotes>
            <ho_recurring_create_orders>
                <schedule>
                    <cron_expr>0 1 * * *</cron_expr>
                </schedule>
                <run>
                    <model>ho_recurring/observer::createOrders</model>
                </run>
            </ho_recurring_create_orders>
        </jobs>
    </crontab>
</config>
